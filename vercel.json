{
  "framework": null,
  "outputDirectory": "dist/public",
  "buildCommand": "npx vite build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}