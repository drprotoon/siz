{
  "version": 2,
  "name": "siz-ecommerce",
  "builds": [
    {
      "src": "server/vercel.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/**",
          "shared/**",
          "migrations/**",
          "package.json",
          "tsconfig.server.json"
        ],
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build:prod",
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/debug",
      "dest": "/api/debug.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/vercel.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DISABLE_SECURE_COOKIE": "false"
  },
  "functions": {
    "server/vercel.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["gru1"],
  "framework": null
}
