{
  "version": 2,
  "buildCommand": "node scripts/vercel-simple-deploy.js",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"],
        "nodeVersion": "22.x"
      }
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ]
}