{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "server/**"],
        "nodeVersion": "22.x"
      }
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ]
}
